---
// src/components/ServiceCard.astro
export interface Props {
    title: string;
    description: string;
    icon: string;
    tags?: string[];
}

const { title, description, icon, tags = [] } = Astro.props as Props;
---
<div class="group relative overflow-hidden rounded-3xl border border-white/10 bg-white/5 p-8 shadow-xl shadow-purple-500/10 backdrop-blur-lg transition duration-500 hover:-translate-y-2 hover:border-purple-400/60">
    <div class="absolute inset-0 bg-gradient-to-br from-purple-500/0 via-purple-500/10 to-indigo-500/20 opacity-0 transition duration-500 group-hover:opacity-100"></div>
    <div class="relative flex h-full flex-col gap-5">
        <div class="flex h-16 w-16 items-center justify-center rounded-2xl bg-gradient-to-br from-purple-500 via-fuchsia-500 to-indigo-500 text-white shadow-lg shadow-purple-500/30" set:html={icon} />
        <div class="space-y-3">
            <h3 class="text-2xl font-semibold text-white">{title}</h3>
            <p class="text-sm leading-relaxed text-gray-300">
                {description}
            </p>
        </div>
        {tags.length > 0 && (
            <div class="mt-auto flex flex-wrap gap-3 text-[0.7rem] uppercase tracking-[0.3em] text-gray-400">
                {tags.map((tag) => (
                    <span class="rounded-full border border-white/10 px-3 py-1">
                        {tag}
                    </span>
                ))}
            </div>
        )}
    </div>
</div>
